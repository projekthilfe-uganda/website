{{- define "response" -}}
    {
    "Site": {{- partial "site.json.json" .Site -}},
    {{ with .Section -}}
        "Section": "{{ . }}",
    {{- else -}}
        "Section": "home",
    {{- end }}
    "Count": "{{ len .Pages }}",
    "Pages": [
    {{- range $i, $e := .Pages -}}
        {{- if $i }}, {{ end -}}{{- partial "types.json.json" . -}}
    {{- end -}}
    ]
    }
{{- end -}}
